{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "outDir": "dist/",
    "rootDir": "src/",
    "sourceMap": true,
    "removeComments": false
  },
  "exclude": [
    "node_modules",
    "gulp",
    "dist"
  ],
  "skipLibCheck": true
}